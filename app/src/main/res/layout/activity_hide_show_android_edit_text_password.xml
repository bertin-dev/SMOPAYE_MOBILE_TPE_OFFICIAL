<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HideShowAndroidEditTextPassword">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
            android:id="@+id/android_hide_show_edittext_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            app:drawable_hide="@drawable/ic_visibility_off_black_24dp"
            app:drawable_show="@drawable/ic_visibility_black_24dp"
            app:tint_color="#ff00" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
            android:id="@+id/hide_show_edittext_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            app:drawable_hide="@drawable/ic_visibility_off_black_24dp"
            app:drawable_show="@drawable/ic_visibility_black_24dp"
            app:tint_color="#ff00" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
            android:id="@+id/hide_show_android_edittext_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            app:drawable_hide="@drawable/ic_visibility_off_black_24dp"
            app:drawable_show="@drawable/ic_visibility_black_24dp"
            app:tint_color="#ff00" />

    </android.support.design.widget.TextInputLayout>

    <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
        android:id="@+id/hide_show_android_edittext_password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Hide and Show EditText Password"
        app:drawable_hide="@drawable/ic_visibility_off_black_24dp"
        app:drawable_show="@drawable/ic_visibility_black_24dp"
        app:tint_color="#ff00" />

    <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
        android:id="@+id/hide_show_android_edittext_password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Hide Show EditText Password"
        app:drawable_hide="@drawable/ic_visibility_off_black_24dp"
        app:drawable_show="@drawable/ic_visibility_black_24dp"
        app:tint_color="#ff00" />

</LinearLayout>